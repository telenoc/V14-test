<odoo>
    <data>
        <template id="main_template_inherit" inherit_id="account_reports.main_template">
            <xpath expr="//div[@class='o_account_reports_body']" position="before">
                <style>
                    .table th, .table td{
                        padding: 0.5rem 0.2rem !important
                    }
                    .o_account_reports_page .o_account_reports_domain_line_4,.o_account_reports_page table > tbody > tr > td ~ td > span{
                        margin-left:0px !important;
                        
                    }
                    .o_account_reports_page .o_account_reports_table .date
                    {
                        text-align: left !important;
                    }
                    .o_foldable_total.limit_width{
                        white-space: nowrap !important;
                    }
                    .limit_width{
                        width:80% !important;
                        max-width:80% !important;
                        white-space: normal  !important;
                        word-break: break-word  !important;
                    }
                    .tax,.tex,.date,.number {
                        width: 3% !important;
                        max-width: 3% !important;
                    }
                </style>
            </xpath>
            <xpath expr="//table[@class='o_account_reports_table table-hover']" position="attributes">
                <attribute name="class">table table-bordered</attribute>
            </xpath>
        </template>
    </data>
</odoo>
